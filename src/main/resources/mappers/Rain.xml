<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="egovframework.rainMapper">
	<insert id="insertRainfalls" parameterType="java.util.List">
		insert into seoul_rain values
		<foreach collection="list" item="item" separator=", ">
			(#{item.gaugeCode}, #{item.time}, #{item.rainfall})
		</foreach>
		on conflict (gauge_code, time)
    	do update set rainfall = EXCLUDED.rainfall
	</insert>
	
	<select id="selectGuNames" resultType="java.lang.String">
		select distinct(split_part(location,' ',2))
		from seoul_rain_gauge
	</select>
</mapper>